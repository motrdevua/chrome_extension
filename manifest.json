{
  "manifest_version": 2,
  "name": "Hope New Tab",
  "short_name": "Hope",
  "version": "0.0.1",
  "description": "A beautiful New Tab page",
  "permissions": [
    "storage",
    "bookmarks"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "Hope"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}